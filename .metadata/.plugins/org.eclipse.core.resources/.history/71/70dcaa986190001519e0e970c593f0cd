package controleur;

import java.util.*;

import modele.DemandeDeLivraison;
import modele.Intersection;
import modele.Plan;
import modele.Troncon;

import vue.FenetreIHM;

/**
 * 
 */
public class Controleur {

    /**
     * 
     */
    protected Etat etatCourant;

    /**
     * 
