package vue;

import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import java.util.*;

import controleur.Controleur;

/**
 * 
 */
public class EcouteurSouris extends MouseAdapter{

    /**
     * Default constructor
     */
    public EcouteurSouris() {
    }

    /**
     * @param controleur 
     * @param vueGraphique 
     * @param fenetreIHM
     */
    public void EcouteurSouris(Controleur controleur, VueGraphique vueGraphique, FenetreIHM fenetreIHM) {
        // TODO implement here
    }
    
    /**
     * 
     */
    protected Controleur controleur;

    /**
     * 
     */
    protected VueGraphique vueGraphique;

    /**
     * 
     */
    protected FenetreIHM fenetreIHM;

    
    @Override
	public void mouseClicked(MouseEvent evt) {
		switch (evt.getButton()){
		case MouseEvent.BUTTON1: 
			Point p = coordonnees(evt);
			if (p != null)
				controleur.clicGauche(p); 
			break;
		case MouseEvent.BUTTON3: 
			controleur.clicDroit(); 
			break;
		default:
		}
	}

}